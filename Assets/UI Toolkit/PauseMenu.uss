    -unity-font-definition: url("project://database/Assets/Fonts/Creepster-Regular.ttf?fileID=12800000&guid=6fc664735c4d3fc49ac7736c78d9d384&type=3#Creepster-Regular");
}

.button:hover {
    background-image: url("project://database/Assets/UI%20Toolkit/UI%20Assets/button%20wide%20hover.png?fileID=2800000&guid=18b0bbddfa501274997ffaba30d68048&type=3#button wide hover");
